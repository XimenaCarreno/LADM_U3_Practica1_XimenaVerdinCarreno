<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="#EEE1C9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evidencias"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/editidActivi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="ID de Actividad asociada" />
    <Button
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/camara"
        android:text="SELECCIONAR IMAGEN"/>

    <ImageView
        android:id="@+id/foto"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/camara"
        android:background="#AAFFFFFF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR"
            android:id="@+id/agregar"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VOLVER"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/volverPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VOLVER PANTALLA PRINCIPAL"/>

    <ListView
        android:id="@+id/listaEvidencias"
        android:layout_width="match_parent"
        android:layout_height="245dp" />



</LinearLayout>